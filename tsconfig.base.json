{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    
    /* Strict Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@pos-argentina/shared": ["./packages/shared/src"],
      "@pos-argentina/pos-core": ["./packages/pos-core/src"],
      "@pos-argentina/inventory": ["./packages/inventory/src"],
      "@pos-argentina/customers": ["./packages/customers/src"],
      "@pos-argentina/fiscal": ["./packages/fiscal/src"],
      "@pos-argentina/payments": ["./packages/payments/src"],
      "@pos-argentina/reports": ["./packages/reports/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}